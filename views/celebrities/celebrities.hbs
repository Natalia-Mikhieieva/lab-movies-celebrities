<h1>Here is the list of all Celebrities</h1>

<div id="container">

  {{#each celebrities}}
    <div style="border: solid white; padding:0 0 10px 10px">
      <h2>{{name}}</h2>
         <a style="margin-left:5px" href="/celebrities/{{_id}}/edit">Edit Celebrity</a>

      <form action="/celebrities/{{id}}/delete" method="POST">
        <button style="background:gray">Delete Celebrity</button></form>
    </div>
    <br />
  {{/each}}
</div>


